<Window x:Class="PL.UserEngineer.engineerIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.UserEngineer"
        mc:Ignorable="d"
        Title="engineerIdWindow" Height="450" Width="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Please enter your Engineer ID:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Id, Mode=OneWayToSource}" Width="150" Height="25" Margin="0,0,0,10" />
            <Button Content="Submit" Width="150" Height="50" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
